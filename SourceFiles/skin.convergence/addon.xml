    <import addon="xbmc.gui" version="5.0.0"/>
	<import addon="script.favourites" version="5.0.2"/>
	<import addon="service.skin.widgets" version="0.0.27"/>
	<import addon="script.randomandlastitems" version="2.2.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
