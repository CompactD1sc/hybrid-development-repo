<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="FullScreenMediaFlagging">
        <control type="group">
            <include>Window_OpenClose_Animation</include>
            <control type="grouplist">
                <description>Media Codec Flagging Images</description>
                <left>100</left>
                <top>0</top>
                <width>900</width>
                <align>center</align>
                <itemgap>5</itemgap>
                <orientation>horizontal</orientation>
                <control type="image">
                    <description>Extra Info Flag</description>
                    <width>61</width>
                    <height>46</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture>$VAR[ExtraInfoFlag]</texture>
                </control>
                <control type="image">
                    <description>Video rez Image</description>
                    <width>96</width>
                    <height>46</height>
                    <aspectratio align="right">keep</aspectratio>
                    <texture>$VAR[typehackflagging,flagging/video/,.png]</texture>
                </control>
                <control type="image">
                    <description>Codec Image</description>
                    <width>96</width>
                    <height>46</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture>$VAR[videocodec,flagging/video/,.png]</texture>
                </control>
                <control type="image">
                    <description>Audio Codec Image</description>
                    <width>96</width>
                    <height>46</height>
                    <aspectratio align="right">keep</aspectratio>
                    <texture>$VAR[AudioCodecFlag,flagging/audio/,.png]</texture>
                </control>
                <control type="image">
                    <description>Audio Codec Image</description>
                    <width>61</width>
                    <height>46</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture>$INFO[ListItem.AudioChannels,flagging/audio/,.png]</texture>
                </control>
                <control type="image">
                    <description>Aspectratio Image</description>
                    <width>96</width>
                    <height>46</height>
                    <aspectratio align="right">keep</aspectratio>
                    <texture>$INFO[ListItem.VideoAspect,flagging/aspectratio/,.png]</texture>
                </control>
                <visible>Skin.HasSetting(hidegenreicons)</visible>
                <visible>Container.Content(Movies) | Container.Content(MusicVideos)</visible>
            </control>
            <control type="grouplist">
                <description>Media Codec Flagging Images</description>
                <left>100</left>
                <top>0</top>
                <width>900</width>
                <align>center</align>
                <itemgap>5</itemgap>
                <orientation>horizontal</orientation>
                <include>SmallVideoGenreFlagging</include>
                <visible>!Skin.HasSetting(hidegenreicons)</visible>
                <visible>Container.Content(Movies) | Container.Content(MusicVideos)</visible>
            </control>
            <control type="grouplist">
                <description>Media Codec Flagging Images</description>
                <left>100</left>
                <top>0</top>
                <width>900</width>
                <align>center</align>
                <itemgap>5</itemgap>
                <orientation>horizontal</orientation>
                <include>SmallVideoGenreFlagging</include>
                <visible>Container.Content(Seasons) | Container.Content(TVShows)</visible>
            </control>
            <control type="image">
                <description>Studio image</description>
                <left>0</left>
                <top>0</top>
                <width>96</width>
                <height>46</height>
                <aspectratio align="center">keep</aspectratio>
                <texture background="true">$INFO[ListItem.Studio,flagging/studio/,.png]</texture>
                <visible>!IsEmpty(Control.GetLabel(5047)) + !IsEmpty(ListItem.Studio)</visible>
            </control>
            <control type="image">
                <description>Rating image</description>
                <left>1004</left>
                <top>0</top>
                <width>96</width>
                <height>46</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$VAR[RatingMPAA,flagging/ratings/,.png]</texture>
                <visible>!IsEmpty(ListItem.Mpaa)</visible>
            </control>
        </control>
    </include>
    <include name="VideoStudioFlagging">
        <include>ListedStudioIcon</include>
        <control type="image">
            <description>Studio image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="center">keep</aspectratio>
            <texture background="true">$INFO[ListItem.Studio,flagging/studio/,.png]</texture>
            <visible>!IsEmpty(Control.GetLabel(5047)) + !IsEmpty(ListItem.Studio)</visible>
        </control>
    </include>
    <include name="VideoMPAAFlaggingConditions">
        <control type="image">
            <description>Rating image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="right">keep</aspectratio>
            <texture>$VAR[RatingMPAA,flagging/ratings/,.png]</texture>
            <visible>!IsEmpty(ListItem.Mpaa)</visible>
        </control>
    </include>
    <include name="VideoExtraInfoFlagging">
        <control type="image">
            <description>Extra Info Flag</description>
            <width>48</width>
            <height>35</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$VAR[ExtraInfoFlag]</texture>
        </control>
    </include>
    <include name="VideoCodecFlaggingConditions">
        <control type="image">
            <description>Video rez Image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="right">keep</aspectratio>
            <texture>$VAR[typehackflagging,flagging/video/,.png]</texture>
        </control>
        <control type="image">
            <description>Codec Image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$VAR[videocodec,flagging/video/,.png]</texture>
        </control>
    </include>
    <include name="VideoTypeHackFlaggingConditions">
        <control type="image">
            <description>Video Type Image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$VAR[typehackflagging,flagging/video/,.png]</texture>
            <visible>!Skin.HasSetting(hidefilenameflagging)</visible>
        </control>
    </include>
    <include name="AudioCodecFlaggingConditions">
        <control type="image">
            <description>Audio Codec Image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="right">keep</aspectratio>
            <texture>$VAR[AudioCodecFlag,flagging/audio/,.png]</texture>
        </control>
    </include>
    <include name="AudioChannelsFlaggingConditions">
        <control type="image">
            <description>Audio Codec Image</description>
            <width>55</width>
            <height>35</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[ListItem.AudioChannels,flagging/audio/,.png]</texture>
        </control>
    </include>
    <include name="AspectCodecFlaggingConditions">
        <control type="image">
            <description>Aspectratio Image</description>
            <width>75</width>
            <height>35</height>
            <aspectratio align="right">keep</aspectratio>
            <texture>$INFO[ListItem.VideoAspect,flagging/aspectratio/,.png]</texture>
        </control>
    </include>
</includes>