<?xml version="1.0" encoding="utf-8"?>
<window>
	<animation effect="fade" time="100">WindowOpen</animation>
	<animation effect="fade" time="200">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<control type="group">
			<left>5</left>
			<top>5</top>
			<animation effect="slide" start="0,0" end="0,-60" time="200" condition="Window.IsVisible(infodialog) | Window.IsVisible(volumebar) | Window.IsVisible(extendedprogressdialog)">conditional</animation>
			<animation effect="slide" start="0,0" end="50,0" time="100" condition="Window.IsVisible(Mutebug)">conditional</animation>
			<animation effect="slide" start="0,0" end="-40,0" time="100" reversible="false" condition="Skin.HasSetting(HideBusyAnimation)">Conditional</animation>
			<control type="image">
				<description>Busy animation</description>
				<left>2</left>
				<top>2</top>
				<width>36</width>
				<height>36</height>
				<texture>busy.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="0" end="360" center="20,20" time="1600" loop="true" condition="true">conditional</animation>
				<visible>!Skin.HasSetting(HideBusyAnimation)</visible>
			</control>
			<control type="label">
				<description>Busy label</description>
				<left>50</left>
				<top>4</top>
				<width>160</width>
				<height>20</height>
				<align>left</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[31004]</label>
				<font>font12</font>
			</control>
			<control type="progress" id="10">
				<description>Progressbar</description>
				<left>50</left>
				<top>30</top>
				<width>160</width>
				<height>8</height>
			</control>
		</control>
	</controls>
</window>